        <script src="/socket.io/socket.io.js"></script>
        <script>
            const socket = io();
            socket.on('info',(info)=>{ 
                var xtempdate  = []
                var ytempval   = []
                var xhumiddate = []
                var yhumidval  = []   
                var xsoildate  = []
                var ysoilval   = []
                for(let i = 0; i < 10; i++) {
                    xtempdate.splice(i,0,info.tempsList[i].datetime)
                    ytempval.splice(i, 0, info.tempsList[i]._temp)
                    xhumiddate.splice(i,0,info.humidsList[i].datetime)
                    yhumidval.splice(i, 0, info.humidsList[i]._humidity)
                    xsoildate.splice(i,0,info.soilsList[i].datetime)
                    ysoilval.splice(i, 0, info.soilsList[i]._soil)
                }

                var trace1 = {
                        x: xtempdate,
                        y: ytempval,
                        type: 'scatter',
                        mode: "lines",
                        name: "Temperature",
                        line: {color: '#7F7F7F'}
                }
                var trace2 = {
                        x: xhumiddate,
                        y: yhumidval,
                        type: 'scatter',
                        mode: "lines",
                        name: "Humidity",
                        line: {color: '#17BECF'}
                }
                var trace3 = {
                        x: xsoildate,
                        y: ysoilval,
                        type: 'scatter',
                        mode: "lines",
                        name: "Soil Moisture",
                        line: {color: '#FFA500'}
                }
                var dataTempHumid = [trace1, trace2]
                var dataSoil      = [trace3]
                 Plotly.newPlot('temp-humid-line', dataTempHumid);
                 Plotly.newPlot('soil-line', dataSoil)
                
            })
        </script>
        
        
